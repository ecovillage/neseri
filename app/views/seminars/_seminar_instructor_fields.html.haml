.nested-fields
  .field
  = f.labeled_email_field :email, icon: 'fa-envelope', help_text: t('seminar_instructor.helptext.email')
  .field.is-horizontal
    .field-label.is-normal
    .field-body
      .control
        = f.check_box :main_contact
        %b
          = f.label :main_contact
  .field.is-horizontal
    .field-label.is-normal
    .field-body
      .control
        = f.check_box :contactable
        %b
          = f.label :contactable
  = f.labeled_text_field :accommodation, icon: 'fa-home'
  = f.labeled_text_field :comment, icon: 'fa-comment-o'
  = f.labeled_text_area  :qualification, icon: 'fa-adress-card', help_text: t('seminar_instructor.helptext.qualification')
  = f.labeled_text_field :firstname, placeholder: t('seminar_instructor.placeholder.firstname')
  = f.labeled_text_field :lastname, placeholder: t('seminar_instructor.placeholder.lastname')
  = f.labeled_text_area "address"
  = f.labeled_text_field "fax", icon: 'fa-fax'
  = f.labeled_text_field "phone", icon: 'fa-phone'
  = f.labeled_text_field "mobile", icon: 'fa-mobile'
  = f.labeled_text_field "homepage"

  .field.is-grouped.is-grouped-right
    .control
      -# This needs an arrow up or clearer wording (to make clear which referee is meant)
      = link_to_remove_association t('seminar_instructors.remove'), f, class: 'button is-danger'
